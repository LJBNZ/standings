    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm start",
            "name": "Run frontend",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceRoot}/frontend",
        },
        {
            "name": "Run backend",
            "type": "python",
            "request": "launch",
            "program": "backend/run.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}